<div class="container mt-2">
  {{#each recipes}}
    <div class="card card-body mb-2">
      <div class="row">
        <div class="col-sm-6">
          <h4>{{name}}</h4>
        </div>
        <div class="col-sm-6">
          <p>Created on: {{creation_date}}</p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <p>Recipe Type: {{type}}</p>
        </div>
        <div class="col-sm-6">
          <p>Recipe Size: {{size}}</p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <a class="btn btn-primary btn-block mb-2" href="/recipes/edit/{{id}}">Edit Recipe</a>
        </div>
        <div class="col-sm-6">
          <form action="/recipes/{{id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-danger btn-block" value="Delete">
          </form>
        </div>
      </div>
      
      
    </div>
  {{else}}
  <p>No recipes created</p>
  {{/each}}
  <a href="/recipes/add" class="btn btn-primary">Create new recipe</a>
</div>
